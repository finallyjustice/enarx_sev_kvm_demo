[build]
target = "x86_64-kernel.json"

[target.'cfg(target_os = "enarx")']
#runner = "target/debug/vmrun"
runner = [ "bash",
           "-c",
           "qemu-system-x86_64 -enable-kvm -cpu host -smp 1 -m 128 -nodefaults -vga none -nographic -no-reboot -device isa-debug-exit,iobase=0xf4,iosize=0x04 -serial mon:stdio -kernel \"$@\"; ret=$?; ((ret==33)) && exit 0; exit $ret",
           "--"
         ]
